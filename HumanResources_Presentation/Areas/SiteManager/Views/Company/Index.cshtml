@{
    Layout = "_LayoutEmployee";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="~/media2/css/all.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="~/media2/css/adminlte.min.css">


<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-6">
            <!-- DONUT CHART -->
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Company Distribution Based On Status</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    @*    <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>*@
                    </div>
                </div>
                <div class="card-body">
                    <div id="chartContainer" style="min-height: 350px; height: 350px; max-height: 250px; max-width: 100%;"></div>
                </div>

            </div>
        </div>
        <!-- /.col (LEFT) -->
        <div class="col-md-6">
            <!-- BAR CHART -->
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Employee Number Of Companies</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
@*                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>*@
                    </div>
                </div>
                <div class="card-body">
                    <div id="chartContainer1" style="min-height: 350px; height: 350px; max-height: 250px; max-width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light1",  //"light1", "light2", "dark1", "dark2"
            exportEnabled: true,
            animationEnabled: true,
            title: {
                text: ""
            },
            subtitles: [{
                text: ""
            }],
            data: [{
                type: "pie",
                startAngle: 180,
                toolTipContent: "<b>{label}</b>: {y}%",
                showInLegend: "true",
                legendText: "{label}",
                indexLabel: "{label} - {y}%",
                dataPoints: @Html.Raw(ViewBag.Data)
                                                        }]
        });
        chart.render();

        var chart1 = new CanvasJS.Chart("chartContainer1", {
            animationEnabled: true,
            theme: "light1", // "light1", "light2", "dark1", "dark2"
            title: {
                text: ""
            },
            axisY: {
                title: "Number Of Employee"
            },
            data: [{
                type: "column",
                dataPoints: @Html.Raw(ViewBag.DataPoints)
                                                    }]
        });
        chart1.render();
    }
</script>




<script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>

<script src="~/media2/js/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/media2/js/bootstrap.bundle.min.js"></script>
<!-- ChartJS -->
<script src="~/media2/js/Chart.min.js"></script>
<!-- AdminLTE App -->
<script src="~/media2/js/adminlte.min.js"></script>