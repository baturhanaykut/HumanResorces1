@using HumanResources_Application.Models.VMs.LeaveTypeVMs
@using X.PagedList
@using X.PagedList.Mvc.Core


@model IPagedList<LeaveTypeVM>

@{
    Layout = "_LayoutEmployee";
    int index = 1;
}

<div class="content container-fluid">

    <div class="col-xl-12 col-sm-12 col-12">
        <div class="breadcrumb-path mb-4 mt-4">
            <ul class="breadcrumb">
                <h3>Settings</h3>
            </ul>
        </div>
    </div>

    <div>
        <ul></ul>
    </div>

    <div class="col-xl-12 col-sm-12 col-12 mb-4">
        <div class="head-link-set">
            <ul>
                <li><a asp-area="CompanyManager" asp-controller="ExpenseType" asp-action="ListExpenseType">Expense Type</a></li>
                <li><a class="active" href="ListLeaveType">Leave Type</a></li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12 ">
            <div class="row mb-4">
                <div class="col-xl-4 col-sm-6 col-6">
                    <div class="card board1 fill1 ">
                        <div class="card-body">
                            <div class="card_widget_img">
                                <img src="~/media/image/money.png" alt="card-img" />
                            </div>
                            <div class="card_widget_header">
                                <a asp-area="CompanyManager" asp-controller="LeaveType" asp-action="CreateLeaveType" class="btn-add"><i data-feather="plus"></i>Add Leave Type</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="card">
                <div class="table-heading">
                    <h2>Leave Type List</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped text-center">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>@Html.DisplayNameFor(x=>x.First().LeaveTypeName)</th>
                                    <th>@Html.DisplayNameFor(x=>x.First().DefaultDays)</th>
                                    <th>Action</th>
                                
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <input type="hidden" asp-for="@item.Id" />
                                <tbody>
                                    <tr>
                                        <td><label>@index</label></td>
                                        <td><label>@item.LeaveTypeName</label> </td>
                                        <td><label>@item.DefaultDays</label> </td>
                                        <td>
                                            <a asp-area="CompanyManager" asp-controller="LeaveType" asp-action="LeaveTypeEdit" asp-route-id="@item.Id">
                                                <button class="btn btn-warning">Edit<i data-feather="edit"></i></button>
                                            </a>
                                            <a  data-bs-toggle="modal" data-bs-target="#delete" data-bs-whatever="@item.Id">
                                                <button class=" btn btn-danger">Delete<i data-feather="trash-2"></i></button>
                                            </a>
                                        </td>

                                    </tr>
                                </tbody>
                                index++;
                            }


                        </table>




                    </div>
                </div>


                @*Delete Leave Type Pop-Up:*@
                <div class="customize_popup">
                    <div class="modal fade"
                         id="delete"
                         tabindex="-1"
                         aria-labelledby="staticBackdropLabels1"
                         aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header text-centers border-0">
                                    <h5 class="modal-title text-center" id="staticBackdropLabels1">
                                        Are You Sure Want to Delete Leave Type?
                                    </h5>
                                </div>
                                <div class="modal-footer text-centers">

                                    <form asp-area="CompanyManager" asp-controller="LeaveType" asp-action="Delete">
                                        <input id="deleteLeaveTypeInput" class="deleteLEaveType" type="hidden" name="id" />
                                        <button id="Delete" type="submit" class="btn btn-primary">Delete</button>
                                        <a asp-controller="LeaveType" asp-action="ListLeaveType" type="button" class="btn btn-secondary btn-lg">Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>


@section Scripts{
    <script>
        var exampleModal = document.getElementById('delete')
        exampleModal.addEventListener('show.bs.modal', function (event) {

            var button = event.relatedTarget

            var recipient = button.getAttribute('data-bs-whatever')

            document.getElementById("deleteLeaveTypeInput").value = recipient;

        })

    </script>
    <script>

        $(function () {

            $("#example1").DataTable({

                "responsive": true, "lengthChange": false, "autoWidth": false,

                //"buttons": ["excel", "pdf"]

            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });

    </script>
    }


