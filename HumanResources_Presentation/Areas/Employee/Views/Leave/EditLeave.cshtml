@{
    Layout = "_LayoutEmployee";
}

@model UpdateLeaveDTO


<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <h3>Edit Leave</h3>
            </div>
        </div>

        <div class="col-xl-12 col-sm-12 col-12">
            <form asp-area="Employee" asp-controller="Leave" asp-action="EditLeave" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AppUserId" />
                <input type="hidden" asp-for="ApproveStatus" />
                <div class="card">

                    <div class="card-body">

                        <input asp-for="Id" type="hidden" />
                        <div class="row">
                            <div class="input-group mb-3">

                                <div class="col-xl-6 col-sm-12 col-12">
                                    <label asp-for="RequestComments">Explanation</label>
                                    <div class="form-group">
                                        <input asp-for="RequestComments" type="text" placeholder="Please enter your reason for requesting a leave..." />
                                    </div>
                                    <span asp-validation-for="RequestComments" class="text-danger"></span>
                                </div>

                                <div class="col-xl-6 col-sm-12 col-12">

                                    <div class="form-group">
                                        <label asp-for="LeaveTypeId">Leave Type</label>
                                        <select asp-for="LeaveTypeId" class="custom-select" asp-items="@ViewBag.LeaveTypes">
                                            <option value="selected">Please Select Your Leave Type </option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                                </div>

                                <div class="col-xl-6 col-sm-12 col-6">
                                    <label asp-for="LeaveDay" class="mt-3 mb-1">Leave Day</label>
                                    <div class="form-group mt-3">
                                        <input asp-for="LeaveDay" type="text" pattern="\d*" class="form-control" placeholder="Enter the number of requested leave days..." />
                                    </div>
                                    <span asp-validation-for="LeaveDay" class="text-danger"></span>
                                </div>

                                <div class="col-xl-6 col-sm-12 col-6"></div>

                                <div class="col-xl-6 col-sm-12 col-6">
                                    <div class="form-group mt-3">
                                        <label asp-for="StartDate">Start Date</label>
                                        <input asp-for="StartDate" type="date" class="form-control" placeholder="Enter Your Start Date" />
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>

                                <div class="col-xl-6 col-sm-12 col-6"></div>

                                <div class="col-xl-6 col-sm-12 col-6">
                                    <div class="form-group mt-3">
                                        <label asp-for="EndDate">End Date</label>
                                        <input asp-for="EndDate" type="date" class="form-control" placeholder="Enter Your End Date" />
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>

                                <div class="col-xl-6 col-sm-12 col-6"></div>



                            </div>


                        </div>

                    </div>
                </div>

                <button type="submit" class="btn btn-success w-auto">Update Leave</button>
                <a asp-area="Employee" asp-controller="Leave" asp-action="ListLeave" class="btn btn-warning w-auto">Cancel</a>
            </form>

        </div>
        <div class="row">
            <div class="col-xl-12 col-sm-12 col-12">
                <div class="form-btn">
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts{


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
