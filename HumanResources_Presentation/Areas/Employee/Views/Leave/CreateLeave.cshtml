@{
    Layout = "_LayoutEmployee";
}

@model CreateLeaveDTO


<div class="content container-fluid">
    
    <div class="row mt-4">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <h3> Create Leave</h3>
            </div>
        </div>
    </div>

    <div class="card">
        <form asp-area="Employee" asp-controller="Leave" asp-action="CreateLeave" method="post">
            <div class="card-body">
                <div class="row">

                    <div class="col-xl-6 col-sm-12 col-12">
                        <label asp-for="RequestComments">Explanation</label>
                        <input asp-for="RequestComments" type="text" class="form-control" placeholder="Please enter your reason for requesting an leave..." style="height:70px; padding-inline-start  30px" />
                        <span asp-validation-for="RequestComments" class="text-danger"></span>
                    </div>

                    <div class="col-xl-6 col-sm-12 col-12">
                        <div class="form-group">
                            <label asp-for="LeaveTypeId">Leave Type</label>
                            <select asp-for="LeaveTypeId" class="custom-select" asp-items="@ViewBag.LeaveTypes" style="padding-inline-start :15px">
                                <option value="">Please Select Your Leave Type </option>
                            </select>
                            <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-sm-12 col-12">
                        <div class="form-group">
                            <label asp-for="LeaveDay">LeaveDay</label>
                            <input asp-for="LeaveDay" class="col-xl-12 col-sm-12 col-12 form-control" type="number" onchange="setTwoNumberDecimal" min="0" max="30" step="0.50" value="" placeholder="Enter the number of requested leave days..." style="height:70px; padding-inline-start :30px         />
                            <span asp-validation-for="LeaveDay" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-sm-12 col-12">
                        <div class="form-group">
                            <label asp-for="StartDate">Start Date</label>
                            <input asp-for="StartDate" type="date" class="form-control" placeholder="Enter Your Start Date" style="height:70px; padding-inline-start :30px"   />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-xl-6 col-sm-12 col-12">
                        <div class="form-group">
                            <label asp-for="EndDate">End Date</label>
                            <input asp-for="EndDate" type="date" class="form-control" placeholder="Enter Your Start Date" style="height:70px; padding-inline-start :30px"   />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-success w-auto">Add Leave</button>
                <a asp-area="Employee" asp-controller="Leave" asp-action="ListLeave" class="btn btn-warning w-auto">Cancel </a>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    <script>
        $('form').submit(function () {
            if ($(this).valid()) {
                $(this).find(':submit').attr('disabled', 'disabled');
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
