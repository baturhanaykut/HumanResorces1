    <div class="sidebar" id="sidebar">
        <div class="sidebar-inner slimscroll">
            <div class="sidebar-contents">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Employee") || User.IsInRole("CompanyManager"))
                            {
                                @if (User.IsInRole("Employee"))
                                {
                                    <li>
                                        <a asp-area="Employee" asp-controller="Employee" asp-action="Index" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/home.svg" alt="sidebar_img"> <span>Home</span></a>
                                    </li>


                                    <li>
                                        <a asp-area="Employee" asp-controller="Employee" asp-action="Edit" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/profile.svg" alt="sidebar_img"> <span>My Profile</span></a>
                                    </li>

                                    <li>
                                        <a asp-area="Employee" asp-controller="Employee" asp-action="ListEmployees"><img src="~/media/image/employee.svg" alt="sidebar_img"><span> Employees</span></a>
                                    </li>

                                    if ((ViewBag.Employee).ExecutiveStatus)
                                    {
                                        <li>
                                            <a asp-area="Employee" asp-controller="EmployeeRequest" asp-action="Advance"><img src="~/media/image/employeerequest.png" alt="sidebar_img"><span> Employee Request</span></a>
                                        </li>
                                    }
                                }

                                @if (User.IsInRole("CompanyManager"))
                                {
                                    <li>
                                        <a asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="IndexGrid" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/home.svg" alt="sidebar_img"> <span>Home</span></a>
                                    </li>

                                    <li>
                                        <a asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="Edit" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/profile.svg" alt="sidebar_img"> <span>My Profile</span></a>
                                    </li>

                                    <li>
                                        <a asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="Index"><img src="~/media/image/employee.svg" alt="sidebar_img"><span> Employees</span></a>
                                    </li>

                                    <li>
                                        <a asp-area="CompanyManager" asp-controller="EmployeeRequest" asp-action="Index_Advances"><img src="~/media/image/employeerequest.png" alt="sidebar_img"><span> Employee Request</span></a>
                                    </li>

                                    <li>
                                        <a asp-area="CompanyManager" asp-controller="Company" asp-action="Index"><img src="~/media/image/company.svg" alt="sidebar_img"><span> Company</span></a>
                                    </li>

                                    <li>
                                        <a asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="Reports">
                                            <img src="~/media/image/report.svg" alt="sidebar_img"><span>Reports</span>

                                        </a>
                                    </li>

                                    <li>
                                        <a asp-area="CompanyManager" asp-controller="ExpenseType" asp-action="ListExpenseType"><img src="~/media/image/company.svg" alt="sidebar_img"><span>Settings</span></a>
                                    </li>

                                }

                                <li>
                                    <a asp-area="Employee" asp-controller="Advance" asp-action="ListAdvance" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/advance.png" alt="sidebar_img"><span> Advances</span></a>
                                </li>


                                <li>
                                    <a asp-area="Employee" asp-controller="Expense" asp-action="ListExpense" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/expense.png" alt="sidebar_img"><span> Expenses</span></a>
                                </li>


                                <li>
                                    <a asp-area="Employee" asp-controller="Leave" asp-action="ListLeave" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/leave.svg" alt="sidebar_img"><span> Leaves</span></a>
                                </li>

                            }

                            else if (User.IsInRole("SiteManager"))
                            {
                                <li>
                                    <a asp-area="SiteManager" asp-controller="Company" asp-action="Index" asp-route-UserName="@User.Identity.Name"><img src="~/media/image/home.svg" alt="sidebar_img"> <span>Home</span></a>
                                </li>

                                <li>
                                    <a asp-area="SiteManager" asp-controller="Company" asp-action="CompanyStatus"><img src="~/media/image/company.svg" alt="sidebar_img"><span> Companies</span></a>
                                </li>
                            }


                        }
                        else
                        {
                            <li>
                                <a asp-controller="Account" asp-action="Login"><img src="~/media/image/profile.svg" alt="sidebar_img"> <span>Profile</span></a>
                            </li>

                        }


                </div>
            </div>
        </div>
    </div>


    <div class="page-wrapper">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>



