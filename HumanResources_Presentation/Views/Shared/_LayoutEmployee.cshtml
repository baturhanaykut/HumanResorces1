                <div class="header-left">
                    @*<a href="index.html" class="logo">
                <img src="~/media/image/HR.png" alt="Human Resources">
                </a>*@

                    <a asp-area="SiteManager" asp-controller="Company" asp-action="Index" asp-route-UserName="@User.Identity.Name" class="logo"><img src="~/media/image/logo3.png" alt="Human Resources" width="70" height="70"></a>

