<body>

    @if (User.IsInRole("CompanyManager"))
    {
        <header>
            <div class="header " style="background-color: #BDCDD6;">

                <div class="header-left">
                    @* <a href="index.html" class="logo">
                <img src="~/media/image/HR.png" alt="Human Resources">
                </a>*@

                    <a asp-area="CompanyManager" asp-controller="CompanyManager" asp-action="IndexGrid" asp-route-UserName="@User.Identity.Name" class="logo">
                        <img src="~/media/image/logo3.png" alt="Human Resources" width="70" height="70">
                    </a>

                    <a href="index.html" class="logo logo-small">
                        <img src="~/media/image/logo3.png" alt="Logo" width="30" height="30">
                    </a>

                    <a href="javascript:void(0);" id="toggle_btn">
                        <span class="bar-icon">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </a>
                </div>


                @*Header Search area*@


                <div class="top-nav-search">
                    <form asp-action="Index" asp-controller="Search">
                        <input name="employeename" type="text" class="form-control" placeholder="Search Employee">
                        <button class="btn" type="submit" id="text"><i class="fa fa-search"></i></button>

                    </form>
                </div>


                <a class="mobile_btn" id="mobile_btn">
                    <i class="fas fa-bars"></i>
                </a>
                <ul class="nav user-menu">

                    @if (User.Identity.IsAuthenticated)
                    {
                        @*                    <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="ProfileDetails" asp-route-UserName="@User.Identity.Name"></a>
                </li>*@

                        <li class="nav-item">
                            <a class="nav-link" asp-area="default" asp-controller="Account" asp-action="LogOut">Hello @((ViewBag.Employee).FullName), LogOut</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="default" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="default" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }

                </ul>
            </div>
        </header>


    }

