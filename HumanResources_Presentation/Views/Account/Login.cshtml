@model LoginDTO

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Login - Human Resources</title>

    <link rel="shortcut icon" href="~/media/image/logo3.png">
    <link rel="stylesheet" href="~/media/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/media/fontsawesome/fontawesome.min.css">
    <link rel="stylesheet" href="~/media/fontsawesome/all.min.css">
    <link rel="stylesheet" href="~/media/css/style.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>
   <div>
        <partial name="_Notification" />
   </div>
    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <img class="img-fluid logo-dark mb-2" src="~/media/image/loggo.gif" alt="Logo">
                <div class="loginbox">
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1>Login</h1>
                            <p class="account-subtitle">Access to our dashboard</p>
                            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl=@ViewData["ReturnUrl"] method="post">
                                <div class="form-group">
                                    <label class="form-control-label">Email Address</label>
                                    <input asp-for="Email" type="email" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label class="form-control-label">Password</label>
                                    <div class="pass-group">
                                        <input asp-for=Password type="password" class="form-control pass-input">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <span class="fas fa-eye toggle-password"></span>
                                    </div>
                                </div>

                                <button class="btn btn-lg btn-block btn-primary" type="submit" value="Login">Login</button>
                                <div class="form-group">
                                    <div class="row">
                                        @*<div class="col-6">
                                        <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="cb1">
                                        <label class="custom-control-label" for="cb1">Remember me</label>
                                        </div>
                                        </div>*@
                                        <div class="col-12 text-right">
                                            <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-link">Forgot Password ?</a>
                                        </div>
                                    </div>
                                </div>


                                <div class="text-center dont-have">Don't have an account yet? <a asp-controller="Account" asp-action="Register">Register</a></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/media/js/jquery-3.6.0.min.js"></script>
    <script src="~/media/js/popper.min.js"></script>
    <script src="~/media/js/bootstrap.min.js"></script>
    <script src="~/media/js/feather.min.js"></script>
    <script src="~/media/js/script.js"></script>
    <script src="https://kit.fontawesome.com/e9795d1447.js" crossorigin="anonymous"></script>

</body>
</html>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}